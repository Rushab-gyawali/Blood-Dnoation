@model BDMS.Shared.Common.StaffCommon
@{ ViewBag.Title = "Staff";
    Layout = "~/Views/Shared/_Layout.cshtml"; }

<script src="~/Scripts/jquery-3.5.1.js"></script>
<script src="~/Scripts/datatable.min.js"></script>
<script src="~/Scripts/Datatable.boostrap4.min.js"></script>

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">          
        <h4 class="header-title">Staff List</h4>         
        <a class="btn btn-primary pull-right" href="/Staff/New" role="button">Add Staff</a>           
                <div class="single-table">
                    <div class="table-responsive">
                        <table id="example" class="table text-center">
                            <thead class="text-uppercase bg-danger">
                                <tr class="text-white">
                                    <th>SNno</th>
                                    <th>FullName</th>
                                    <th>Email</th>
                                    <th>Phone Number</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('#example').DataTable({
            "responsive": true,
            "processing": false,
            "serverSide": false,
            "searchDelay": 1500,
            "ajax": {
                "type": 'POST',
                "dataType": 'json',
                "url": "/Staff/List",
                "contentType": 'application/json; charset=utf-8',
                'data': function (data) {
                    return data = JSON.stringify(data);
                    debugger;
                    console.log(data);
                }
            },
            lengthMenu:
                [
                    [25, 50, 100],
                    ['25', '50', '100']
                ],
            "language": {
                "search": "",
                "searchPlaceholder": "Search..."
            },
            columns: [
                { 'data': 'SNNo', "orderable": true, "searchable": true },
                { 'data': 'FullName', "orderable": true },
                { 'data': 'Email', "orderable": true },
                { 'data': 'PhoneNo', "orderable": true },
                { 'data': 'Action', "orderable": true },

            ],
            "columnDefs":
                [
                    { "className": "dt-center", "targets": "4" },
                    //  { "targets": 1, "className": "text-right" }
                ]
        });
    });

</script>

